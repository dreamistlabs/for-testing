{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "project": [
      "./backend/jsconfig.json",
      "./frontend/jsconfig.json"
    ],
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "import/no-anonymous-default-export": "warn",
    "no-unused-vars": "warn",
    "jest/no-disabled-tests": "warn"
  },
  "settings": {
    "jest": {
      "version": "detect"
    }
  }
}