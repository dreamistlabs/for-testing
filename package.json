{
  "name": "@dreamistlabs/for-testing",
  "description": "A package used primarily for testing purposes.",
  "author": "Johnny Hu <johnny@dreamistlabs.com>",
  "main": "dist/index.js",
  "license": "MIT",
  "version": "1.2.2",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel src -d dist -s inline",
    "changelog": "auto-changelog -p --handlebars-setup handlebars.js --template changelog-template.hbs",
    "changelog:debug": "auto-changelog -p --template json --output changelog-preview.json",
    "circular-deps": "madge --circular src",
    "cloc": "cloc --skip-win-hidden --exclude-dir=node_modules,bin,build,coverage,dist --exclude-ext=html --exclude-list-file=.clocignore *",
    "cloc:persist": "npm run cloc -- --md --out=CLOC.md && git add CLOC.md",
    "lint": "eslint src --ext .js,.jsx, --color --fix-dry-run",
    "pre-commit": "run-s pretty-quick \"test -- --changedFilesWithAncestor\" cloc:persist",
    "pre-push": "run-s lint test",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "pretty-check": "prettier --check \"src/**/*.{js,jsx}\"",
    "pretty-format": "npm run pretty-check -- --write",
    "pretty-quick": "pretty-quick --staged --pattern \"src/**/*.*{js,jsx}\"",
    "release": "release-it",
    "release:changelog": "npm run changelog -- --stdout",
    "release:major": "npm run changelog && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "npm run changelog && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "npm version patch && npm run changelog && sleep 2 && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && git push origin && git push origin --tags",
    "start": "nodemon --exec babel-node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.9",
    "@babel/core": "^7.18.9",
    "@babel/node": "^7.18.9",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@dreamistlabs/config-commitlint": "^1.0.3",
    "auto-changelog": "^2.4.0",
    "cloc": "^2.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.25",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "luxon": "^1.28.0",
    "madge": "^5.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "release-it": "^15.2.0"
  },
  "optionalDependencies": {
    "win-node-env": "^0.6.1"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {},
    "testRegex": "((\\.|/*.)(spec|test))\\.js?$",
    "transformIgnorePatterns": []
  }
}
